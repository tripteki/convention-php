{
    "exclude": [ ".git", "vendor", "node_modules", ".gradle" ],

    "preset": "laravel",
    "rules": {

        "single_blank_line_at_eof": true,
        "blank_line_after_opening_tag": true,
        "single_blank_line_before_namespace": true,
        "blank_line_after_namespace": true,
        "no_whitespace_in_blank_line": true,
        "no_trailing_whitespace": true,
        "indentation_type": true,
        "statement_indentation": true,
        "array_indentation": true,
        "braces": { "allow_single_line_anonymous_class_with_empty_body": true, "allow_single_line_closure": true, "position_after_control_structures": "next", "position_after_functions_and_oop_constructs": "next", "position_after_anonymous_constructs": "next" },
        "declare_parentheses": true,

        "single_quote": false,
        "no_trailing_comma_in_list_call": false,
        "trailing_comma_in_multiline": { "after_heredoc": true, "elements": [ "arrays" ] },
        "semicolon_after_instruction": true,
        "no_empty_statement": true,

        "use_arrow_functions": true,

        "align_multiline_comment": { "comment_type": "phpdocs_only" },
        "single_line_comment_spacing": true,
        "no_empty_comment": true,
        "no_empty_phpdoc": true,
        "no_trailing_whitespace_in_comment": true,
        "phpdoc_annotation_without_dot": true,
        "phpdoc_var_annotation_correct_order": true,
        "phpdoc_trim": true,
        "phpdoc_add_missing_param_annotation": { "only_untyped": false },
        "phpdoc_align": { "align": "left" },
        "phpdoc_order": { "order": [ "param", "return", "throws" ] }
    }
}